# Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/safirajobs?retryWrites=true&w=majority

# Server port
PORT=3000

# Node environment
NODE_ENV=development

# Log level (DEBUG, INFO, WARN, ERROR) - default: INFO in prod, DEBUG in dev
LOG_LEVEL=INFO

# ReliefWeb API app name (required by their API)
RELIEFWEB_APPNAME=safirajobs

# Sync schedule (cron format) - default every 6 hours
SYNC_CRON_SCHEDULE=0 */6 * * *

# Secret for external cron trigger (use a long random string, min 32 chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=your-secret-key-change-this-in-production

# Your Render external URL (for keep-alive pings in production)
# Example: https://safirajobs-api.onrender.com
RENDER_EXTERNAL_URL=

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
